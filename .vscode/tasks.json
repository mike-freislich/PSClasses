{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build C++",
            "type": "shell",
            "command": "clang",
            "args": [
                "-std=c++11",
                "-I${workspaceRoot}/src/",
                "-I${workspaceRoot}/lib/Collections",
                "-I${workspaceRoot}/lib/interop",  
                "-I${workspaceRoot}/lib/utils",
                "-I${workspaceRoot}/lib/PSSynth/audio",
                "-I${workspaceRoot}/lib/PSSynth/config",
                "-I${workspaceRoot}/lib/PSSynth/controllers",
                "-I${workspaceRoot}/lib/PSSynth/model",
                "-I${workspaceRoot}/lib/PSSynth/modules",                                
                "-I${workspaceRoot}/lib/PSSynth/parameters",                          
                "-I${workspaceRoot}/lib/PSSynth/view",                   
                "-g",                
                "-o",
                "${workspaceRoot}/testSynth",
                "${workspaceRoot}/src/main.cpp",
                "-lstdc++"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-I${workspaceRoot}/src/",
                "-I${workspaceRoot}/lib/Collections",
                "-I${workspaceRoot}/lib/interop",  
                "-I${workspaceRoot}/lib/utils",
                "-I${workspaceRoot}/lib/PSSynth/audio",
                "-I${workspaceRoot}/lib/PSSynth/config",
                "-I${workspaceRoot}/lib/PSSynth/controllers",
                "-I${workspaceRoot}/lib/PSSynth/model",
                "-I${workspaceRoot}/lib/PSSynth/modules",                                
                "-I${workspaceRoot}/lib/PSSynth/parameters",                          
                "-I${workspaceRoot}/lib/PSSynth/view",                  
                "-o",
                "${workspaceRoot}/testSynth",
                "${workspaceRoot}/src/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "${workspaceRoot}/testSynth",
            "problemMatcher": [],
            "label": "run C++",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build C++"
        },
    ]
}