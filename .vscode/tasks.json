{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build C++",
            "type": "shell",
            "command": "clang",
            "args": [
                "-std=c++17",
                "-I${workspaceRoot}/src/",
                "-I${workspaceRoot}/src/audio",
                "-I${workspaceRoot}/src/config",
                "-I${workspaceRoot}/src/controllers",
                "-I${workspaceRoot}/src/model",
                "-I${workspaceRoot}/src/modules",
                "-I${workspaceRoot}/src/utils",
                "-I${workspaceRoot}/src/view", 
                "-I${workspaceRoot}/src/parameters",   
                "-I${workspaceRoot}/lib/",              
                "-I${workspaceRoot}/lib/Collections",
                "-I${workspaceRoot}/lib/interop",    
                "-g",                
                "-o",
                "${workspaceRoot}/testSynth",
                "${workspaceRoot}/src/main.cpp",
                "-lstdc++"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I${workspaceRoot}/src/",
                "-I${workspaceRoot}/src/audio",
                "-I${workspaceRoot}/src/config",
                "-I${workspaceRoot}/src/controllers",
                "-I${workspaceRoot}/src/model",
                "-I${workspaceRoot}/src/modules",
                "-I${workspaceRoot}/src/utils",
                "-I${workspaceRoot}/src/view", 
                "-I${workspaceRoot}/src/parameters",
                "-I${workspaceRoot}/lib/",              
                "-I${workspaceRoot}/lib/Collections",
                "-I${workspaceRoot}/lib/interop",                 
                "-o",
                "${workspaceRoot}/testSynth",
                "${workspaceRoot}/src/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "${workspaceRoot}/testSynth",
            "problemMatcher": [],
            "label": "run C++",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build C++"
        },
    ]
}