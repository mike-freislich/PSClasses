{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I${workspaceRoot}/src/",
                "-I${workspaceRoot}/src/audio",
                "-I${workspaceRoot}/src/controllers",
                "-I${workspaceRoot}/src/model",
                "-I${workspaceRoot}/src/modules",
                "-I${workspaceRoot}/src/utils",
                "-I${workspaceRoot}/src/view", 
                "${workspaceRoot}/src/main.cpp",
                "-o",
                "${workspaceRoot}/testSynth"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "${workspaceRoot}/testSynth",
            "problemMatcher": [],
            "label": "run C++",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build C++"
        }
    ]
}